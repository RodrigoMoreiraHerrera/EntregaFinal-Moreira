
  {{#if products}}
    <h2 class="text-2xl font-bold mb-4 text-center">Lista de Productos</h2>
  {{else}}
    <h2 class="text-2xl font-bold mb-4 text-center">No hay productos disponibles</h2>
  {{/if}}

<br>
<div class="flex justify-center gap-15">

  {{#each products}}

    <div class="product col-span-1">
      <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white ">
        <img
          class="w-full"
          src="{{this.thumbnails}}"
          alt="Imagen de ejemplo"
        />
        <div class="px-6 py-4">
          <div class="font-bold text-xl mb-2">{{this.title}}</div>
          <p class="text-gray-700 text-base">
            {{this.description}}
          </p>
        </div>
        <div class="px-6 pt-4 pb-2">
          <span
            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
          >${{this.price}}</span>

        </div>
      </div>
    </div>

  {{/each}}

  

</div>

<a href="http://localhost:8080/products" class="mt-2 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"> 
                    Ver Productos en Tiempo Real
                </a>

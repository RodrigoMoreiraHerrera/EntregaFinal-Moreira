<div class="max-w-2xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <div class="flex flex-col md:flex-row gap-8">
    <div class="flex-shrink-0">
      <img
        class="w-64 h-64 object-cover rounded"
        src="{{product.thumbnails.[0]}}"
        alt="Imagen de {{product.title}}"
      />
    </div>
    <div class="flex-1">
      <h1 class="text-3xl font-bold mb-4">{{product.title}}</h1>
      <p class="text-gray-700 mb-2">{{product.description}}</p>
      <p class="text-gray-500 mb-2">Código: <span class="font-mono">{{product.code}}</span></p>
      <p class="text-gray-500 mb-2">Categoría: {{product.category}}</p>
      <p class="text-gray-500 mb-2">Estado: {{#if product.status}}Disponible{{else}}No disponible{{/if}}</p>
      <div class="flex items-center gap-4 mt-4">
        <span class="text-2xl font-bold text-green-600">${{product.price}}</span>
        <span class="text-sm text-gray-600">Stock: {{product.stock}}</span>
      </div>
      <button class="mt-6 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold px-6 py-2 rounded shadow">
        Agregar al Carrito
      </button>
    </div>
  </div>
</div>